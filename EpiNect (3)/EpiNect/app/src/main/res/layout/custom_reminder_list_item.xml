<!-- custom_reminder_list_item.xml -->

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- TextView to display reminder message -->
    <!-- custom_reminder_list_item.xml -->
    <TextView
        android:id="@+id/reminderMessageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Reminder Message" />

    <!-- TextView to display reminder time -->
    <TextView
        android:id="@+id/reminderTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Reminder Time" />

    <!-- You can add more TextViews or other UI elements here to display additional information -->

</LinearLayout>
